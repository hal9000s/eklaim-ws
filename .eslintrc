{
    "extends": [
        "prettier", "plugin:node/recommended"
    ],
    "plugins": [
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "node/no-missing-require": "error",
        "prettier/prettier": ["error", {
           "endOfLine":"auto"
        }],
        "class-methods-use-this": "off",
        "no-param-reassign": "off",
        "camelcase":"off",
        "no-unused-vars": "off"
    },
    "globals": {
        "process": true,
        "__dirname":true,
        "console":true,
        "__filename":true,
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    }
}
